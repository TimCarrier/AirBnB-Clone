      <%= link_to user_booking_path(@user, booking) do %>
        <div class="card" width="18rem;">
          <%= cl_image_tag booking.dog.photos.first.key, class:"card-img-top" %>
          <div class="card-body">
            <p class="card-text">Check your date with <em><%= booking.dog.name %></em></p>
            <br>
            <p class="card-text">Your next date is on <%= booking.date %></p>
          </div>
        </div>
      <% end %>
    </div>
    <% end %>
