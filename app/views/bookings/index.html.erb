<div class="big-container">
  <div class="container d-flex flex-column m-5 gap-3">
    <h1>Your dates</h1>

    <% if @has_bookings %>

      <div class="bookings-container">
        <% @bookings.each do |booking| %>
          <div class="book-container">

            <%= link_to user_booking_path(@user, booking), class: "booking-link" do %>

                <div class="dog-portrait-container">
                  <%= cl_image_tag booking.dog.photos.first.key, width: 290, height: 250, crop: :fill, class:"book-dog-portrait" %>
                </div>
                  <div class="book-dog-infos">
                    <%# <h4 class="text-booking">Check your date with <strong><%= booking.dog.name %>
                    <p class="text-booking"><%= booking.dog.name %> is a nice <%= booking.dog.race %></p>
                    <p class="text-booking">Rating: <%= '⭐️' * booking.dog.rating %></p>
                    <hr>
                    <p class="text-booking">Your next date is on <%= booking.date %></p>
                  </div>
          </div>
            <% end %>

        <% end %>
      </div>


